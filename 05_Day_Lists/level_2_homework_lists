ages = [19, 22, 19, 24, 20, 25, 26, 24, 25, 24]
# Sort the list and find the min and max age
# Add the min age and the max age again to the list
# Find the median age (one middle item or two middle items divided by two)
# Find the average age (sum of all items divided by their number )
# Find the range of the ages (max minus min)
# Compare the value of (min - average) and (max - average), use abs() method

print(ages.sort())
print(min(ages))
print(max(ages))
ages.append(min(ages))
ages.append(max(ages))
print(ages)
ages.sort()
print(ages)
print(len(ages))
print(ages[5], ages[6])
median_value = (ages[5] + ages[6]) / 2
print(median_value)
number_of_values = len(ages)
average_age = sum(ages)/number_of_values
print(average_age)
range_ages = max(ages) - min(ages)
print(range_ages)

# Compare the value of (min - average) and (max - average), use abs() method
diff_min_average = abs(min(ages) - average_age)
print(diff_min_average)
diff_max_average = abs(max(ages) - average_age)
print(diff_max_average)
compared_values = abs(diff_min_average - diff_max_average)
print(compared_values)
